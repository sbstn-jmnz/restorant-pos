<% if user_signed_in? %>
    <% @mis_ordenes.each do |orden| %>
    	<div class="jumbotron">
	    	<div class="container">
	      		<h3><%= orden.id %></h3>
	      		<% orden.cuenta.each do |clave, valor| %>
	      			<%= clave %> x<%= valor %><br>
	      		<% end %>
	      		<%= orden.condition %><br>
	      		Total = $<%= orden.suma %>
	      		<%= form_for orden, url: estado_path(orden), method: :get do |f| %>
	      			<%= f.select :condition, options_for_select([["-----","nil"],["Cocina","c"],["Despachado","d"],["Pagado","p"]]) %>
	      			<%= f.submit "actualizar" %>
	      		<% end  %>
	      	</div>
      	</div>
    <% end %>
 <% end %>