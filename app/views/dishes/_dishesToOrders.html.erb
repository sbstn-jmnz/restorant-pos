
<li class="list-group-item list-group-item-info">
  <%= dish.description %>
  <%= dish.name %>
  <span class=""><%= dish.price.to_s %></span>
  <% if @order_id.nil? %>
	  <%= link_to "Agregar", orders_path(dish_id: dish.id), method: :post, class: 'btn btn-primary' %>
  <% else %>
	  <%= link_to "Agregar", order_path(dish_id: dish.id), method: :patch, class: 'btn btn-primary' %>
	  <%= link_to "Eliminar", popDish_order_dish_path(order_id: @order_id, dish_id: dish.id), method: :delete, class: 'btn btn-primary' %>
  <% end %>
</li>
