<div class="container">
	<div class="col-xs-2 col-sm-2 col-md-2">
		<%= simple_form_for(@dish, remote: true, html: { class: 'form-horizontal'}) do |f|%>
		<div class="form-inputs">
			<%= f.input :name, requiered: true, autofocus: true, label:false, placeholder: 'Nombre' %>
			<%= f.input :description, requiered:true, label:false, placeholder: 'Descripcion', as: :text %>
			<%= f.input :price, requiered: true, label:false, placeholder: 'Precio' %>
			<%= f.button :submit %>
		<% end %>
		</br>
	</div>
</div>
</div>